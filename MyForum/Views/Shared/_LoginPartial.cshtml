@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/Manage/Index" style="color: white"><i class="fa fa-user"></i> @User.Identity.GetUserName().ToUpper() <br/><small>Profile</small></a>
        </li>
        <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()" style="text-transform:uppercase">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/Account/Register"><i class="fa fa-user-plus"></i> REGISTER <br/><small>Join The Community</small></a></li>
        <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="fa fa-user-circle"></i> LOGIN <br/><small>Hang Around</small></a></li>
    </ul>
}
