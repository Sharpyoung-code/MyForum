@model MyForum.Models.Profile.ProfileListingModel

<div class="usersPage">
    <div class="jumbotron usersPageHeading">
        <h2>Browse Users</h2>
        <hr />
    </div>
    <div class="row usersPageBody">
        <table class="table table-bordered" id="usersPageTable">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>User Rating</th>
                    <th>Member Since</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var profile in Model.Profiles)
                {
                    <tr>
                        <td>@profile.UserName</td>
                        <td>@profile.Email</td>
                        <td>@profile.UserRating</td>
                        <td>@profile.MemberSince</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
