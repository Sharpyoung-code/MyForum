@model MyForum.Models.Forum.AddNewForumModel

<div class="createPostPage">
    <div class="jumbotron createPostHeading">
        <h2>New Forum</h2>
        <hr />
    </div>
    <div class="row createPostBody">
        <div class="col-md-12">
            @using (Html.BeginForm("AddForum", "Forum", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "newForumForm" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new Forum.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Title, new { @class = "col-md-12 form-control", cols = "120" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                    <div class="col-md-12">
                        @Html.TextAreaFor(m => m.Description, new { @class = "col-md-12 form-control", cols = "120" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Submit Forum" />
                    </div>
                </div>

            }
        </div>
    </div>
</div>